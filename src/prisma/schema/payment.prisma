model Payment {
  id        String        @id @default(uuid())
  invoiceId String
  orderId   String        @unique
  amount    Decimal
  status    PaymentStatus
  gateway   String
  method    String?
  createdAt DateTime      @default(now())
  invoice   Invoice       @relation(fields: [invoiceId], references: [id])

  @@map("payment")
}
