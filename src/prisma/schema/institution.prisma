model Institution {
  id         String              @id @default(uuid())
  name       String              @unique
  createdBy  String
  isActive   Boolean             @default(true)
  createdAt  DateTime            @default(now())
  profile    InstitutionProfile?
  categories Category[]
  admin      Users               @relation("InstitutionAdmin", fields: [createdBy], references: [id])
  santri     Santri[]
  users      Users[]             @relation("InstitutionUsers")

  @@map("institution")
}
