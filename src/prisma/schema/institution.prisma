model Institution {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  createdBy  Int
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())


  users User[] @relation("InstitutionUsers")

  santri     Santri[]
  categories Category[]
  admin User @relation("InstitutionAdmin", fields: [createdBy], references: [id])

  @@map("institutions")
}
