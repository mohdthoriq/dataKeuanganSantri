model institution {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  createdBy  Int
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())
  categories category[]
  admin      user       @relation("InstitutionAdmin", fields: [createdBy], references: [id])
  santri     santri[]
  users      user[]     @relation("InstitutionUsers")

  @@map("institution")
}
