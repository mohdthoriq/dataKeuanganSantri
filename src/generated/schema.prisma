generator client {
  provider        = "prisma-client-js"
  output          = "../generated"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
}

model Category {
  id            Int           @id @default(autoincrement())
  name          String
  type          CategoryType
  institutionId Int
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  Institution   Institution   @relation(fields: [institutionId], references: [id])
  Transaction   Transaction[]
}

model EmailVerification {
  id        Int      @id @default(autoincrement())
  userId    Int
  otpCode   String
  expiredAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}

model Institution {
  id                                   Int        @id @default(autoincrement())
  name                                 String     @unique
  createdBy                            Int
  isActive                             Boolean    @default(true)
  createdAt                            DateTime   @default(now())
  Category                             Category[]
  User_Institution_createdByToUser     User       @relation("Institution_createdByToUser", fields: [createdBy], references: [id])
  Santri                               Santri[]
  User_User_institutionIdToInstitution User[]     @relation("User_institutionIdToInstitution")
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}

model Profile {
  id                  Int     @id @default(autoincrement())
  name                String
  gender              String
  address             String
  profile_picture_url String?
  public_id           String?
  userId              Int     @unique
  User                User    @relation(fields: [userId], references: [id])
}

model Santri {
  id              Int            @id @default(autoincrement())
  nis             String
  fullname        String
  kelas           String
  gender          String
  waliId          Int
  institutionId   Int
  waliName        String?
  institutionName String?
  isActive        Boolean        @default(true)
  createdAt       DateTime       @default(now())
  Institution     Institution    @relation(fields: [institutionId], references: [id])
  User            User           @relation(fields: [waliId], references: [id])
  Transaction     Transaction[]
  auth_account    auth_account[]

  @@unique([nis, institutionId])
}

model Transaction {
  id              Int          @id @default(autoincrement())
  santriId        Int
  categoryId      Int
  type            CategoryType
  amount          Decimal
  description     String?
  transactionDate DateTime
  createdBy       Int
  isDeleted       Boolean      @default(false)
  createdAt       DateTime     @default(now())
  Category        Category     @relation(fields: [categoryId], references: [id])
  User            User         @relation(fields: [createdBy], references: [id])
  Santri          Santri       @relation(fields: [santriId], references: [id])
}

model User {
  id                                          Int                 @id @default(autoincrement())
  username                                    String
  email                                       String              @unique
  password                                    String
  role                                        UserRole
  institutionId                               Int?
  isEmailVerified                             Boolean             @default(false)
  isActive                                    Boolean             @default(true)
  createdAt                                   DateTime            @default(now())
  EmailVerification                           EmailVerification[]
  Institution_Institution_createdByToUser     Institution[]       @relation("Institution_createdByToUser")
  Notification                                Notification[]
  Profile                                     Profile?
  Santri                                      Santri[]
  Transaction                                 Transaction[]
  Institution_User_institutionIdToInstitution Institution?        @relation("User_institutionIdToInstitution", fields: [institutionId], references: [id])
  auth_account                                auth_account[]
  password_reset                              password_reset[]
}

model auth_account {
  id        Int      @id @default(autoincrement())
  username  String
  password  String
  userId    Int
  santriId  Int?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  Santri    Santri?  @relation(fields: [santriId], references: [id])
  User      User     @relation(fields: [userId], references: [id])
}

model password_reset {
  id        Int      @id @default(autoincrement())
  userId    Int
  otpCode   String
  expiredAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}

enum CategoryType {
  PEMASUKAN
  PENGELUARAN
}

enum UserRole {
  ADMIN
  WALI_SANTRI
}
