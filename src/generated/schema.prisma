model EmailVerification {
  id        String   @id @default(uuid())
  userId    String
  otpCode   String
  expiredAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      Users    @relation(fields: [userId], references: [id])

  @@map("email_verification")
}

model AuthAccount {
  id        String   @id @default(uuid())
  username  String
  password  String
  userId    String
  santriId  String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  email     String   @unique
  santri    Santri?  @relation(fields: [santriId], references: [id])
  user      Users    @relation(fields: [userId], references: [id])

  @@map("auth_account")
}

model Category {
  id            String        @id @default(uuid())
  name          String
  type          category_type
  institutionId String
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  institution   Institution   @relation(fields: [institutionId], references: [id])
  transactions  Transaction[]
  invoices      Invoice[]

  @@map("category")
}

model Institution {
  id         String              @id @default(uuid())
  name       String              @unique
  createdBy  String
  isActive   Boolean             @default(true)
  createdAt  DateTime            @default(now())
  profile    InstitutionProfile?
  categories Category[]
  admin      Users               @relation("InstitutionAdmin", fields: [createdBy], references: [id])
  santri     Santri[]
  users      Users[]             @relation("InstitutionUsers")

  @@map("institution")
}

model Invoice {
  id          String        @id @default(uuid())
  userId      String
  santriId    String
  categoryId  String?
  description String?
  totalAmount Decimal
  paidAmount  Decimal       @default(0)
  status      InvoiceStatus
  dueDate     DateTime
  createdAt   DateTime      @default(now())
  santri      Santri        @relation(fields: [santriId], references: [id])
  category    Category?     @relation(fields: [categoryId], references: [id])
  user        Users         @relation(fields: [userId], references: [id])
  payments    Payment[]

  @@map("invoice")
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      Users    @relation(fields: [userId], references: [id])

  @@map("notification")
}

model PasswordReset {
  id        String   @id @default(uuid())
  userId    String
  otpCode   String
  expiredAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      Users    @relation(fields: [userId], references: [id])

  @@map("password_reset")
}

model Payment {
  id        String        @id @default(uuid())
  invoiceId String
  orderId   String        @unique
  amount    Decimal
  status    PaymentStatus
  gateway   String
  method    String?
  createdAt DateTime      @default(now())
  invoice   Invoice       @relation(fields: [invoiceId], references: [id])

  @@map("payment")
}

model Profile {
  id                  String  @id @default(uuid())
  name                String
  gender              String?
  address             String
  profile_picture_url String?
  public_id           String?
  userId              String  @unique
  occupation          String?
  phone               String?
  user                Users   @relation(fields: [userId], references: [id])

  @@map("profile")
}

model InstitutionProfile {
  id            String      @id @default(uuid())
  institutionId String      @unique
  name          String?     @unique
  address       String?
  phone         String?
  email         String?
  website       String?
  logoUrl       String?
  public_id     String?
  description   String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  institution   Institution @relation(fields: [institutionId], references: [id], onDelete: Cascade)
}

model Santri {
  id              String        @id @default(uuid())
  nis             String        @unique
  fullname        String
  kelas           String
  gender          String
  waliId          String
  institutionId   String
  waliName        String?
  institutionName String?
  isActive        Boolean       @default(true)
  createdAt       DateTime      @default(now())
  authAccounts    AuthAccount[]
  institution     Institution   @relation(fields: [institutionId], references: [id])
  wali            Users         @relation("WaliSantri", fields: [waliId], references: [id])
  transactions    Transaction[]
  invoices        Invoice[]

  @@map("santri")
}

model SubscriptionPlan {
  id                String             @id @default(uuid())
  name              String
  price             Decimal
  interval          PlanInterval
  description       String?
  createdAt         DateTime           @default(now())
  userSubscriptions UserSubscription[]

  isActive Boolean @default(true)

  @@map("subscription_plan")
}

model Transaction {
  id              String        @id @default(uuid())
  santriId        String
  categoryId      String
  type            category_type
  amount          Decimal
  description     String?
  transactionDate DateTime
  createdBy       String
  isDeleted       Boolean       @default(false)
  createdAt       DateTime      @default(now())
  orderId         String?       @unique
  source          String?
  sourceId        String?
  category        Category      @relation(fields: [categoryId], references: [id])
  admin           Users         @relation("AdminTransactions", fields: [createdBy], references: [id])
  santri          Santri        @relation(fields: [santriId], references: [id])

  @@map("transaction")
}

model Users {
  id                  String              @id @default(uuid())
  username            String
  email               String              @unique
  password            String
  role                user_role           @default(WALI_SANTRI)
  institutionId       String?
  isEmailVerified     Boolean             @default(false)
  isActive            Boolean             @default(true)
  createdAt           DateTime            @default(now())
  authAccounts        AuthAccount[]
  emailVerifications  EmailVerification[]
  createdInstitutions Institution[]       @relation("InstitutionAdmin")
  invoices            Invoice[]
  notifications       Notification[]
  passwordResets      PasswordReset[]
  profile             Profile?
  santri              Santri[]            @relation("WaliSantri")
  transactions        Transaction[]       @relation("AdminTransactions")
  userSubscriptions   UserSubscription[]
  institution         Institution?        @relation("InstitutionUsers", fields: [institutionId], references: [id])

  @@map("users")
}

model UserSubscription {
  id     String @id @default(uuid())
  userId String
  planId String

  status SubscriptionStatus

  startAt   DateTime
  endAt     DateTime
  isActive  Boolean
  createdAt DateTime         @default(now())
  plan      SubscriptionPlan @relation(fields: [planId], references: [id])
  user      Users            @relation(fields: [userId], references: [id])

  @@map("user_subscription")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
}

enum user_role {
  ADMIN
  WALI_SANTRI
}

enum category_type {
  PEMASUKAN
  PENGELUARAN
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  EXPIRED
}

enum InvoiceStatus {
  UNPAID
  PARTIAL
  PAID
  EXPIRED
}

enum PlanInterval {
  MONTHLY
  YEARLY
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELED
}
