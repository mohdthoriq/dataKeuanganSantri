model EmailVerification {
  id        Int      @id @default(autoincrement())
  userId    Int
  otpCode   String
  expiredAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      Users    @relation(fields: [userId], references: [id])

  @@map("email_verification")
}

model AuthAccount {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  userId    Int
  santriId  Int?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  santri    Santri?  @relation(fields: [santriId], references: [id])
  user      Users    @relation(fields: [userId], references: [id])

  @@map("auth_account")
}

model Category {
  id            Int           @id @default(autoincrement())
  name          String
  type          category_type
  institutionId Int
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  institution   Institution   @relation(fields: [institutionId], references: [id])
  transactions  Transaction[]

  @@map("category")
}

enum user_role {
  ADMIN
  WALI_SANTRI
}

enum category_type {
  PEMASUKAN
  PENGELUARAN
}

model Institution {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  createdBy  Int
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())
  categories Category[]
  admin      Users      @relation("InstitutionAdmin", fields: [createdBy], references: [id])
  santri     Santri[]
  users      Users[]    @relation("InstitutionUsers")

  @@map("institution")
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      Users    @relation(fields: [userId], references: [id])

  @@map("notification")
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  userId    Int
  otpCode   String
  expiredAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      Users    @relation(fields: [userId], references: [id])

  @@map("password_reset")
}

model Profile {
  id                  Int     @id @default(autoincrement())
  name                String
  gender              String?
  address             String
  profile_picture_url String?
  public_id           String?
  userId              Int     @unique
  occupation          String?
  phone               String?
  user                Users   @relation(fields: [userId], references: [id])

  @@map("profile")
}

model Santri {
  id              Int           @id @default(autoincrement())
  nis             String        @unique
  fullname        String
  kelas           String
  gender          String
  waliId          Int
  institutionId   Int
  waliName        String?
  institutionName String?
  isActive        Boolean       @default(true)
  createdAt       DateTime      @default(now())
  authAccounts    AuthAccount[]
  institution     Institution   @relation(fields: [institutionId], references: [id])
  wali            Users         @relation("WaliSantri", fields: [waliId], references: [id])
  transactions    Transaction[]

  @@map("Santri")
}

model Transaction {
  id              Int           @id @default(autoincrement())
  santriId        Int
  categoryId      Int
  type            category_type
  amount          Decimal
  description     String?
  transactionDate DateTime
  createdBy       Int
  isDeleted       Boolean       @default(false)
  createdAt       DateTime      @default(now())
  category        Category      @relation(fields: [categoryId], references: [id])
  admin           Users         @relation("AdminTransactions", fields: [createdBy], references: [id])
  santri          Santri        @relation(fields: [santriId], references: [id])

  @@map("transaction")
}

model Users {
  id                  Int                 @id @default(autoincrement())
  username            String
  email               String              @unique
  password            String
  role                user_role
  institutionId       Int?
  isEmailVerified     Boolean             @default(false)
  isActive            Boolean             @default(true)
  createdAt           DateTime            @default(now())
  authAccounts        AuthAccount[]
  emailVerifications  EmailVerification[]
  createdInstitutions Institution[]       @relation("InstitutionAdmin")
  notifications       Notification[]
  passwordResets      PasswordReset[]
  profile             Profile?
  santri              Santri[]            @relation("WaliSantri")
  transactions        Transaction[]       @relation("AdminTransactions")
  institution         Institution?        @relation("InstitutionUsers", fields: [institutionId], references: [id])

  @@map("users")
}

generator client {
  provider        = "prisma-client-js"
  output          = "../generated"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
}
