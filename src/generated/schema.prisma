model email_verification {
  id        Int      @id @default(autoincrement())
  userId    Int
  otpCode   String
  expiredAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      user     @relation(fields: [userId], references: [id])
}

model auth_account {
  id        Int      @id @default(autoincrement())
  username  String
  password  String
  userId    Int
  santriId  Int?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  santri    santri?  @relation(fields: [santriId], references: [id])
  user      user     @relation(fields: [userId], references: [id])
}

model category {
  id            Int           @id @default(autoincrement())
  name          String
  type          category_type
  institutionId Int
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  institution   institution   @relation(fields: [institutionId], references: [id])
  transactions  transaction[]
}

enum user_role {
  ADMIN
  WALI_SANTRI
}

enum category_type {
  PEMASUKAN
  PENGELUARAN
}

model institution {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  createdBy  Int
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())
  categories category[]
  admin      user       @relation("InstitutionAdmin", fields: [createdBy], references: [id])
  santri     santri[]
  users      user[]     @relation("InstitutionUsers")
}

model notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      user     @relation(fields: [userId], references: [id])
}

model password_reset {
  id        Int      @id @default(autoincrement())
  userId    Int
  otpCode   String
  expiredAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      user     @relation(fields: [userId], references: [id])
}

model profile {
  id                  Int     @id @default(autoincrement())
  name                String
  gender              String?
  address             String
  profile_picture_url String?
  public_id           String?
  userId              Int     @unique
  occupation          String?
  phone               String?
  user                user    @relation(fields: [userId], references: [id])
}

model santri {
  id              Int            @id @default(autoincrement())
  nis             String         @unique
  fullname        String
  kelas           String
  gender          String
  waliId          Int
  institutionId   Int
  waliName        String?
  institutionName String?
  isActive        Boolean        @default(true)
  createdAt       DateTime       @default(now())
  authAccounts    auth_account[]
  institution     institution    @relation(fields: [institutionId], references: [id])
  wali            user           @relation("WaliSantri", fields: [waliId], references: [id])
  transactions    transaction[]
}

model transaction {
  id              Int           @id @default(autoincrement())
  santriId        Int
  categoryId      Int
  type            category_type
  amount          Decimal
  description     String?
  transactionDate DateTime
  createdBy       Int
  isDeleted       Boolean       @default(false)
  createdAt       DateTime      @default(now())
  category        category      @relation(fields: [categoryId], references: [id])
  admin           user          @relation("AdminTransactions", fields: [createdBy], references: [id])
  santri          santri        @relation(fields: [santriId], references: [id])
}

model user {
  id                  Int                  @id @default(autoincrement())
  username            String
  email               String               @unique
  password            String
  role                user_role
  institutionId       Int?
  isEmailVerified     Boolean              @default(false)
  isActive            Boolean              @default(true)
  createdAt           DateTime             @default(now())
  authAccounts        auth_account[]
  emailVerifications  email_verification[]
  createdInstitutions institution[]        @relation("InstitutionAdmin")
  notifications       notification[]
  passwordResets      password_reset[]
  profile             profile?
  santri              santri[]             @relation("WaliSantri")
  transactions        transaction[]        @relation("AdminTransactions")
  institution         institution?         @relation("InstitutionUsers", fields: [institutionId], references: [id])
}

generator client {
  provider        = "prisma-client-js"
  output          = "../generated"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
}
